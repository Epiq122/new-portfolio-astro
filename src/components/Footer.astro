---
import { socialData } from '@/data/siteData';
import { Icon } from 'astro-icon/components';
---

<footer>
  <div>
    <p>
      &copy; <span id='copyright'></span> Robert Gleason. Creating modern web dev
      solutions.
    </p>
    <ul>
      {
        socialData.map(({ href, title, icon }) => (
          <li>
            <a href={href} aria-label={title} title={title}>
              <Icon name={icon} size={24} />
            </a>
          </li>
        ))
      }
    </ul>
  </div>
</footer>

<script>
  const copyrightSpan = document.querySelector('#copyright') as HTMLSpanElement;
  copyrightSpan.textContent = new Date().getFullYear().toString();
</script>
